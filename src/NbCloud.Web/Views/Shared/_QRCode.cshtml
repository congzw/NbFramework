@helper Demo1()
{
    var content = Guid.NewGuid().ToString();
    var domId = Guid.NewGuid();
    <div id="@domId"></div>
    <script>
        require(['jquery', 'canvasConvert'], function ($) {
            "use strict";
            console.log("QRCode: " + '@content');
            $('#@domId').qrcode({
                text: '@content'
            });
        });
    </script>

}
@helper Demo2()
{
    var imgUrl = Url.Content("~/Content/images/demo.jpg");
    <div class="container">
        <div class="row">
            @for (int i = 0; i < 18; i++)
            {
                <div class="col-sm-3">
                    <div class="qr-warap">
                        <div class="qr-hover">
                            <i class="fa fa-qrcode"></i>
                            扫码手机看
                            <div class="qr-box">
                                <div style="border: 1px solid #ffffff; height: 102px;" class="pull-left" id="wxxs"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        require(['jquery', 'qrcode'], function ($) {
            "use strict";

            function randomContent() {
                function s4() {
                    return Math.floor((1 + Math.random()) * 0x10000)
                      .toString(16)
                      .substring(1);
                }
                //var guid = s4() + s4() + '-' + s4() + '-' + s4() + '-' + s4() + '-' + s4() + s4() + s4();
                var guid = s4() + s4() + '-' + s4();
                //console.log(guid);
                return guid;
            };


            $(document).ready(function () {
                //console.log($);
                $('.qr-box div').each(function (index, element) {
                    var $this = $(element);
                    $this.qrcode({
                        text: randomContent(),
                        height: 96,
                        width: 96,
                        @*src: '@imgUrl'*@
                    });
                });
            });
        });
    </script>
}

@helper ShowBase64Png(MemoryStream ms)
{
    @Html.Raw("data:image/png;base64," + Convert.ToBase64String(ms.ToArray()))
}