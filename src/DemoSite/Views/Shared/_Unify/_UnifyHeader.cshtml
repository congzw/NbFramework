}
<div class="header-wraper">
    <!--=== Header ===-->
    <div class="header-v5 header-sticky">
        @_CheckBrowser()
        @topbarV3()
        @_Menus()
    </div>
    <!--=== End Header===-->
</div>

@helper topbar()
{
    <div class="topbar">
        <ul class="loginbar pull-right">
            <li class="hoverSelector">
                <i class="fa fa-globe"></i>
                <a>Languages</a>
                <ul class="languages hoverSelectorBlock">
                    <li class="active">
                        <a href="#">English <i class="fa fa-check"></i></a>
                    </li>
                    <li><a href="#">Spanish</a></li>
                    <li><a href="#">Russian</a></li>
                    <li><a href="#">German</a></li>
                </ul>
            </li>
            <li class="topbar-devider"></li>
            <li><a href="page_faq.html">Help</a></li>
            <li class="topbar-devider"></li>
            <li><a href="page_login.html">Login</a></li>
        </ul>
    </div>
}

@helper topbarV3()
{
    <div class="topbar-v3">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <!-- Topbar Navigation -->
                    <ul class="left-topbar">
                        <li title="超级管理员，欢迎访问默认站点！">
                            <a href="javascript:void(0)">
                                超级管理员，欢迎访问默认站点！
                            </a>
                        </li>
                    </ul>
                    <!--/end left-topbar-->
                </div>
                <div class="col-sm-9">
                    <ul class="list-inline right-topbar pull-right">

                        <li title="平台首页"><a href="/default/portal/home/index"><i class="fa fa-cloud"></i>平台首页</a></li>
                        <li class="topbar-devider"></li>
                        <li title="本站首页"><a href="/default/portal/home/index"><i class="ace-icon fa fa-home"></i>本站首页</a></li>
                        <li class="topbar-devider"></li>
                        <li title="我的消息"><a href="/space/super/Message/Index"><i class="fa fa-envelope"></i>我的消息</a></li>
                        <li class="topbar-devider"></li>
                        <li><a href="/adminsg/home/index"><i class="fa fa-sitemap"></i>站群管理</a></li>
                        <li class="topbar-devider"></li>
                        <li><a href="/default/Admin/Home/Index"><i class="fa fa-cogs"></i>站点管理</a></li>
                        <li class="topbar-devider"></li>
                        <li><a href="/default/AdminApp/Home/Index"><i class="fa fa-cog"></i>应用管理</a></li>
                        <li class="topbar-devider"></li>
                        <li><a href="/space/super/Home/Index"><i class="ace-icon fa fa-star"></i>个人空间</a></li>
                        <li class="topbar-devider"></li>
                        <li><a href="/Common/Account/Logout"><i class="ace-icon fa fa-power-off"></i>注销</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!--/container-->
    </div>
}

@helper _CheckBrowser()
{
    <div class="alert alert-danger fade in alert-dismissable hidden" style="z-index: 999999; position: fixed; top: 0; width: 100%; " id="headerIsRightBrowser">
        <button type="button" class="close" data-dismiss="alert" onclick="divhidden">&times;</button>
        <strong>警告!</strong> <span>当前使用的浏览器版本过低，建议使用Firefox 4、Chrome 13或IE 9以上的浏览器。（点击下载新版本的浏览器：<a href="http://www.firefox.com.cn/" target="_Blank">Firefox</a>&nbsp;&nbsp;&nbsp;<a href="http://www.google.cn/chrome" target="_Blank">Chrome</a>)</span>
    </div>
}

